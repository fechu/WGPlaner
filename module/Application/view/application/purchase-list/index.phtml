		$result .= $this->prettyprint()->button($editUrl, 'Bearbeiten');
		
		$addPurchaseUrl = $this->url('purchase-list/action', array(
			'action' 	=> 'add-purchase', 
			'id'		=> $purchaseList->getId(),
		));
		$result .= $this->prettyprint()->button($addPurchaseUrl, 'Einkauf hinzufÃ¼gen');
		
		return $result;
	}
));

