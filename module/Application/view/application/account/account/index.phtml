<?php
use Application\Entity\Account;
use SMCommon\View\Helper\FormatDate;
/* @var $this SMCommon\View\Renderer\PhpRenderer */
echo $this->pageHeader('Konten');

$table = $this->table();
$table->setData($this->accounts);

$table->addColumn(array(
	'headTitle' 	=> 'Name',
	'dataMethod'	=> function(Account $account) {
		$listUrl = $this->url(
				'account/list-action',
				array(
					'accountid' => $account->getId()
				)
		);
		return $this->prettyprint()->link($listUrl, $account->getName());
	}
));

$table->addColumn(array(
	'headTitle' 	=> 'Aktionen',
	'dataMethod'	=> function(Account $account) {
		$result = '';

		$editButtonGroup = array();

		// Edit button
		$editUrl = $this->url(
				'account/list-action',
				array(
					'action' 	=> 'edit',
					'accountid' => $account->getId()
				)
		);
		$editButtonGroup[] = array(
			'title' => 'Bearbeiten',
			'url'	=> $editUrl
		);

		// Add the edit button in the submenu again.
		$editButtonGroup[] = array(
			'title' => 'Einfkaufsliste bearbeiten',
			'url'	=> $editUrl
		);

		// Edit users (for submenu)
		$editUsersUrl = $this->url('account/users', array(
			'accountid'=> $account->getId(),
		));
		$editButtonGroup[] = array(
			'title' => 'Benutzer bearbeiten',
			'url'	=> $editUsersUrl
		);

		$result .= $this->prettyprint()->splitButton($editButtonGroup);

		// Details about the purchase list.
		$purchasesUrl = $this->url('account/list-action', array(
			'accountid' => $account->getId(),
		));
		$result .= $this->prettyprint()->button($purchasesUrl, 'Details');

		// Add purchase button
		$addPurchaseUrl = $this->url('account/purchases', array(
			'action' 	=> 'add',
			'accountid'	=> $account->getId(),
		));
		$result .= $this->prettyprint()->button($addPurchaseUrl, 'Einkauf hinzufÃ¼gen');


		return $result;
	}
));

$addAccountUrl = $this->url('account/action', array('action' => 'create'));

